<Window x:Class="abobaAPP.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClientWindow" Height="1600" Width="2000">
    <Grid>
        <StackPanel>
            <Grid Height="30">
                <Button Name="backButton" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="20" Margin="5,0,0,0" Content="Назад" Click="backButton_Click"/>
                <TextBlock Name="userNameTextBlock" FontFamily="Verdana" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                <Button Name="myOrdersButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="20" Margin="0,0,200,0" Content="Заказы" Click="myOrdersButton_Click"/>
                <ComboBox Name="discountComboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="20" Margin="200,0,0,0" SelectionChanged="discount_SelectionChanged"/>
            </Grid>
        </StackPanel>
        <DataGrid Name="dataGrid" Margin="0,30,0,30"/>
        <Grid VerticalAlignment="Bottom" Height="30">
            <Button Name="addButton" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="20" Margin="5,0,0,0" Content="Добавить в корзину" Click="addButton_Click"/>
        </Grid>
    </Grid>
</Window>
